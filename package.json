{
  "name": "hotmess-next",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "next dev",
    "dev:safe": "NEXT_DISABLE_ESLINT=1 NEXT_TELEMETRY_DISABLED=1 NEXT_WEBPACK_USEPOLLING=1 NEXT_PRIVATE_TEST_PROXY=0 NEXT_SAFE_MODE=1 node --max-old-space-size=4096 node_modules/.bin/next dev -p 3000",
    "clean:cache": "rm -rf .next .eslintcache node_modules/.cache || true",
    "typecheck": "tsc --noEmit",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test": "jest",
    "test:ci": "jest --coverage",
    "verify": "bash ./scripts/verify.sh",
    "validate:env": "ts-node --transpile-only scripts/validate-env.ts",
    "validate:env:web": "ts-node --transpile-only scripts/validate-env.ts --only=web",
    "validate:env:edge": "ts-node --transpile-only scripts/validate-env.ts --only=edge",
    "env:pull": "bash scripts/hm-env-sync.sh development",
    "env:pull:dev": "bash scripts/hm-env-sync.sh development",
    "env:pull:preview": "bash scripts/hm-env-sync.sh preview",
    "env:pull:prod": "bash scripts/hm-env-sync.sh production",
    "env:bot:check": "bash scripts/hm-env-validate-bot.sh",
    "env:bot:check:local": "bash scripts/hm-env-validate-bot.sh .env.bot",
    "env:doctor": "bash scripts/env-doctor.sh",
    "env:doctor:lenient": "HM_ENV_DOCTOR_LENIENT=1 bash scripts/env-doctor.sh development",
    "env:doc": "pnpm run env:doctor",
    "env:docto": "pnpm run env:doctor:lenient",
    "docs:vercel": "grep -n 'Vercel Deployment Guide' README.vercel.md || echo 'Open README.vercel.md in your editor'",
  "verify:prepush": "pnpm run env:doc && pnpm test",
  "secret:rotate:link": "bash scripts/rotate-link-signing-secret.sh",
  "secrets:scan": "bash scripts/scan-secrets.sh",
    "env:bot:import": "ts-node --transpile-only scripts/import-bot-token-from-txt.ts"
  },
  "dependencies": {
    "@supabase/auth-helpers-nextjs": "^0.10.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.81.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.0.0",
    "dayjs": "^1.11.19",
    "framer-motion": "^12.23.24",
    "jose": "^6.1.1",
    "jotai": "^2.15.1",
    "js-cookie": "^3.0.5",
    "ky": "^1.14.0",
    "lucide-react": "^0.553.0",
    "next": "16.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-globe.gl": "^2.37.0",
    "react-hook-form": "^7.66.0",
    "stripe": "^19.3.0",
    "swr": "^2.3.6",
    "tailwind-variants": "^3.1.1",
    "uuid": "^13.0.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/uuid": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "jest": "^29.7.0",
    "jest-axe": "^10.0.0",
    "jest-environment-jsdom": "^29.7.0",
    "undici": "^6.19.8",
    "tailwindcss": "^4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5"
  }
}
